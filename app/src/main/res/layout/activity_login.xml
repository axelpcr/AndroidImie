<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brimborion.kikivyhun.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/textViewAuthentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/authentication" />

        <EditText
            android:id="@+id/editTextLogin"
            android:layout_below="@+id/textViewAuthentication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/login"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_below="@+id/editTextLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonConnection"
            android:layout_below="@+id/editTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/connection" />

        <CheckBox
            android:id="@+id/checkBoxSavePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttonConnection"
            android:text="@string/savePassword" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:text="@string/register"
            android:layout_below="@+id/checkBoxSavePassword" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
